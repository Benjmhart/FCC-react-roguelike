{
  "name": "react-sass-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "node-sass-chokidar": "0.0.3",
    "npm": "^5.6.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-scripts": "1.0.17",
    "redux": "^3.7.2"
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "build-js": "react-scripts build",
    "lint": "eslint src/components --fix src/actions src/reducers src/styles --ignore-path .gitignore --ignore-pattern internals/scripts || true",
    "pretty": "prettier --use-tabs \"/home/ubuntu/workspace/src/components/*.js\" \"/home/ubuntu/workspace/src/actions/*.js\" \"/home/ubuntu/workspace/src/reducers/*.js\" \"/home/ubuntu/workspace/src/styles/*.js\"",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "start": "npm-run-all -p watch-css start-js lint ",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "format": "prettier --write '**/*.{js,jsx}'",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.6.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.2",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.0"
  }
}
